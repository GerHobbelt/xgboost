<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd" xmlns="http://maven.apache.org/SETTINGS/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <servers>
    <server>
      <username>${env.ART_CREDS_USR}</username>
      <password>${env.ART_CREDS_PSW</password>
      <id>central</id>
    </server>
    <server>
      <username>${env.ART_CREDS_USR}</username>
      <password>${env.ART_CREDS_PSW}</password>
      <id>snapshots</id>
    </server>
    <server>
      <id>ossrh</id>
      <username>${env.SONATYPE_USR}</username>
      <password>${env.SONATYPE_PSW}</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <repositories>
        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>central</id>
          <name>sw-spark-maven</name>
          <url>${env.ART_URL}</url>
        </repository>
        <repository>
          <snapshots />
          <id>snapshots</id>
          <name>sw-spark-maven</name>
          <url>${env.ART_URL}</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>central</id>
          <name>sw-spark-maven</name>
          <url>${env.ART_URL}</url>
        </pluginRepository>
        <pluginRepository>
          <snapshots />
          <id>snapshots</id>
          <name>sw-spark-maven</name>
          <url>${env.ART_URL}</url>
        </pluginRepository>
      </pluginRepositories>
      <id>artifactory</id>
    </profile>

    <profile>
      <id>sonatype-stage</id>
      <repositories>
        <repository>
          <id>sonatype-staging-repo</id>
          <name>Sonatype staging repo</name>
          <url>https://oss.sonatype.org/content/repositories/staging</url>
        </repository>
      </repositories>
    </profile>
    <profile>
      <id>mirror-apache-to-art</id>
      <repositories>
        <repository>
          <id>apache.snapshots</id>
          <name>sw-spark-maven</name>
          <url>${env.ART_URL}</url>
        </repository>
      </repositories>
    </profile>
    <profile>
      <id>artifactory</id>
      <properties>
        <altDeploymentRepository>snapshots::default::${env.ART_URL}-local</altDeploymentRepository>
      </properties>
    </profile>

  </profiles>
  <activeProfiles>
    <activeProfile>artifactory</activeProfile>
  </activeProfiles>
</settings>
